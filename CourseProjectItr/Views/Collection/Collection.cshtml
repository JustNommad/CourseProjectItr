            <input type="text" asp-for="CheckBox3" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NumberOne" class="control-label">@Localizer["Number"]</label>
            <input type="text" asp-for="NumberOne" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NumberSecond" class="control-label">@Localizer["Number"]</label>
            <input type="text" asp-for="NumberSecond" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NumberThird" class="control-label">@Localizer["Number"]</label>
            <input type="text" asp-for="NumberThird" class="form-control" />
        </div>
        <div class="form-group">
