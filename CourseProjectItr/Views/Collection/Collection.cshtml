        </div>
        <div class="form-group">
            <label asp-for="ImageFile" class="control-label">@Localizer["Image"]</label>
            <input type="file" asp-for="ImageFile" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="OneText" class="control-label">@Localizer["TextField"]</label>
            <input type="text" asp-for="OneText" class="form-control" />
