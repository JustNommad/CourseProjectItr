            <label asp-for="Time3" class="control-label">@Localizer["Data"]</label>
            <input type="text" asp-for="Time3" class="form-control" />
        </div>
        <div>
            <input hidden value="@ViewBag.UserId" asp-for="UserId" />
        </div>
        <div class="form-group">
            <input type="submit" value="@Localizer["CreateCollection"]" class="btn btn-outline-secondary" />
        </div>
    </form>
    </div>