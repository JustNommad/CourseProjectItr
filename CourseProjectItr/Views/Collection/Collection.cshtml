        <div class="form-group">
            <label asp-for="Third" class="control-label">@Localizer["TextString"]</label>
            <input type="text" asp-for="Third" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CheckBox1" class="control-label">@Localizer["CheckBox"]</label>
            <input type="text" asp-for="CheckBox1" class="form-control" />
