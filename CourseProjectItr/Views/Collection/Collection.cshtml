        </div>
        <div class="form-group">
            <label asp-for="One" class="control-label">@Localizer["TextString"]</label>
            <input type="text" asp-for="One" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Second" class="control-label">@Localizer["TextString"]</label>
            <input type="text" asp-for="Second" class="form-control" />
