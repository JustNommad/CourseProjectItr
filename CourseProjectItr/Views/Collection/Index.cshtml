@model IEnumerable<CourseProjectItr.Models.Collections>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = Localizer["Main Page"];
}
<link rel="stylesheet" href="~/css/carousel.css" />
    <div class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/image/Фон-1.png" class="d-block w-100" alt="Image">
            </div>
            <div class="carousel-item">
                <img src="~/image/Фон-2.png" class="d-block w-100" alt="Image">
            </div>
            <div class="carousel-item">
                <img src="~/image/Фон-3.png" class="d-block w-100" alt="Image">
            </div>
        </div>
    </div>
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">
                    @foreach (var collection in Model)
                    {

                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                @if (collection.ImageUrl != null)
                                {
                                    <img src="@Url.Content(collection.ImageUrl)" alt="Image" style="width: 100%;max-height: 300px;" />
                                }
                                <div class="card-body">
                                    <h3 class="card-text">@collection.Name</h3>
                                    <p class="card-text">@collection.Review</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a asp-action="ItemList" asp-route-collectionId="@collection.Id" type="button" class="btn btn-sm btn-outline-secondary">@Localizer["Open"]</a>
                                        </div>
                                        <small class="text-muted">@collection.Theme</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
